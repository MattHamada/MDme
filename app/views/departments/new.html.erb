<%= provide(:title, "Add Department") %>
<%= render 'admins/sidebar' %>

<div class="col-xs-8">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Add Department</h4></div>
        <div class="panel-body">

          <%= form_for(@department, html: { :multipart => :true, class: "form-horizontal", role: "form" }) do |f| %>
            <%= render 'shared/error_messages', object: @department %>

            <div class='form-group'>
              <div class='col-xs-7'>
                <%= f.label(:department, 'Name') %>
                <%= text_field :department, :name, class: 'form-control' %>
              </div>
            </div>

            <%= f.submit 'Create', class: 'btn btn-success' %>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

</div>





