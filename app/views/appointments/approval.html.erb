<%= render 'admins/sidebar' %>

<div class="col-xs-7">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Appointments needing approval</h4></div>
        <div class="panel-body">
          <table class='table table-striped table-bordered table-hover'>
            <thread>
              <tr>
                <th>#</th>
                <th>Date & Time</th>
                <th>Doctor</th>
                <th>Patient</th>
              </tr>
              <tbody>
              <% @appointments.each_with_index do |appointment, index| %>
                  <tr>
                    <td><%= link_to("#{index}", appointment) %></td>
                    <td><%= appointment.appointment_time.strftime('%m-%e-%y %I:%M%p') %></td>
                    <td><%= full_name(Doctor.find(appointment.doctor_id)) %></td>
                    <td><%= full_name(Patient.find(appointment.patient_id)) %></td>
                  </tr>
              <% end %>
              </tbody>
            </thread>
          </table>

        </div>
        <div id='day_appointments'>

        </div>
      </div>
    </div>
  </div>
</div>

</div>