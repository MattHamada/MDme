<%= render 'admins/sidebar' %>

<div class="col-md-30">
  <div class="row">
    <div class="col-md-7">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Select Date</h4></div>
        <div class="panel-body">

          <%= form_for(:appointments, url:appointments_browse_path, remote: true, method: :get, html: { class: 'form-group form-inline', role: 'form' }) do |f| %>
              <div class="form-group">
                <%= select_year(Date.today, {start_year: Time.now.year-1, end_year: Time.now.year + 5, field_name: 'year'}, { class: "form-control"}) %>
              </div>
              <div class="form-group">
                <%= select_month(Date.today, {}, {class: "form-control"}) %>
              </div>
              <div class="form-group">
                <%= select_day(Date.today, {}, {class: "form-control"}) %>
              </div>
            <div class='form-group' id="submit">
              <%= f.submit 'Submit', class: 'btn btn-large btn-primary' %>
            </div>
         <% end %>
        </div>
        <div id='day_appointments'>

        </div>
      </div>
    </div>
  </div>
</div>
</div>

