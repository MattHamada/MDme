<%= provide(:title, " | Browse Appointments") %>
<%= render 'admins/sidebar' %>

<div class="col-xs-6">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Select Date</h4></div>
        <div class="panel-body">

          <%= form_for(:appointments, url:appointments_browse_path, remote: true, method: :get, html: { class: 'form-group form-inline', role: 'form' }) do |f| %>
              <div class="form-group">
                <%= f.label(:date, "Select Date") %>
              </div>
              <div class="form-group">
                <%= f.text_field(:date, class: "form-control" ) %>
              </div>
            <div class='form-group' id="submit">
              <%= f.submit 'Submit', class: 'btn btn-large btn-primary', id: 'submit_button' %>
            </div>
         <% end %>
        </div>
        <div class='day_appointments'>

        </div>
      </div>
    </div>
  </div>
</div>


<div class="col-xs-3">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Options</h4></div>
          <div class="well">
            <ul class="nav nav-pills nav-stacked">
              <li><%= link_to "Add Appointment", new_appointment_path %></li>
              <li><%= link_to "Appointment Requests", appointment_approval_path %></li>
              <li><%= link_to "Manage Delays", manage_delays_path %></li>
            </ul>
        </div>
      </div>
    </div>
  </div>
</div>
</div>