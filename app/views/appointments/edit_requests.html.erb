<%= render 'patients/sidebar' %>

<div class="col-xs-6">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Select Date</h4></div>
        <div class="panel-body">
          <table class='table table-striped table-bordered table-hover'>
            <thread>
              <tr>
                <th>#</th>
                <th>Time</th>
                <th>Doctor</th>
              </tr>
              <tbody>
              <% @appointments.each_with_index do |appointment, index| %>
                <tr>
                  <td><%= link_to("#{index+1}", edit_request_path(appointment_id: appointment.id)) %></td>
                  <td><%= appointment.date_time_ampm %></td>
                  <td><%= appointment.doctor_full_name %></td>
                </tr>
              <% end %>
              </tbody>
            </thread>
          </table>


        </div>
      </div>
    </div>
  </div>
</div>
</div>