<%= provide(:title, "Today's Appointments") %>
<%= render 'sidebar' %>

<div class="col-xs-7">
  <div class="row">
    <div class="col-xs-10">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Today's Appointments</h4></div>
        <div class="panel-body">
          <table class='table table-striped table-bordered table-hover'>
            <thread>
              <tr>
                <th>#</th>
                <th>Time</th>
                <th>Patient</th>
              </tr>
              <tbody>
              <% @appointments.each_with_index do |appointment, index| %>
                  <tr>
                    <td><%= link_to("#{index}", appointment) %></td>
                    <td><%= appointment.time_am_pm %></td>
                    <td><%= link_to("#{appointment.patient_full_name}", patient_path(appointment.patient)) %></td>
                  </tr>
              <% end %>
              </tbody>
            </thread>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>

</div>


