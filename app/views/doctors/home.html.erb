<%= provide(:title, "Doctor's Sign In") %>


<div class='container'>
    <div class='row'>
      <div class='col-md-10'>
        <h1>Doctor's Sign in</h1>
        <%= form_for(:session, url:sessions_path, html: { class: 'form form-horizontal', role: 'form' }) do |f| %>
            <div class='form-group'>
              <div class='col-md-3'>
                <%= f.label :email %>
                <%= f.text_field :email, class: 'form-control' %>
              </div>
            </div>
            <div class='form-group'>
              <div class='col-md-3'>
                <%= f.label :password %>
                 <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>
            <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary' %>
        <% end %>
      </div>
    </div>
</div>