<div class="container-non-responsive" id="main-content">
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <!-- upper section -->
  <div class="row">
    <div class="col-xs-3">
      <div class='panel panel-default'>
        <div class="panel-heading"><strong><i class="fa fa-medkit"></i> Toolbox</strong></div>
        <div class="well">

          <ul class="nav nav-pills nav-stacked">
            <li><%= link_to "<i class='fa fa-calendar-o'></i> My Profile".html_safe, doctor_path(current_doctor) %></li>
            <li><%= link_to "<i class='fa fa-book'></i> Manage Appointments".html_safe, doctor_appointments_path(current_doctor) %></li>
            <li><%= link_to "<i class='fa fa-users'></i> Manage Patients".html_safe, doctor_patients_path(current_doctor) %></li>
            <li><%= link_to "<i class='fa fa-minus-circle'></i> Sign Out".html_safe, signout_path, method: :delete %></li>

          </ul>


        </div>
      </div>
    </div>
