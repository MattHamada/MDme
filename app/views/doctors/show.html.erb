<%= provide(:title, "Doctors") %>
<%= render 'sidebar' %>

<div class="col-md-7">
  <div class="row">
    <div class="col-md-10">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Today's Appointments</h4></div>
        <div class="panel-body">
          <table class='table table-striped table-bordered table-hover'>
            <thread>
              <tr>
                <th>#</th>
                <th>Time</th>
                <th>Patient</th>
              </tr>
              <tbody>
              <% @appointments.each_with_index do |appointment, index| %>
                  <tr>
                    <td><%= link_to("#{index}", appointment) %></td>
                    <td><%= appointment.appointment_time.strftime('%I:%M%p') %></td>
                    <td><%= link_to("#{full_name(Patient.find(appointment.patient_id))}", patient_path(Patient.find(appointment.patient_id))) %></td>
                  </tr>
              <% end %>
              </tbody>
            </thread>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>


<div class="col-md-2">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Options</h4></div>
        <div class="panel-body">
          <%= link_to "Add Doctor", new_doctor_path %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

