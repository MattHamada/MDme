<%= provide(:title, "Doctors") %>
<%= render 'admins/sidebar' %>

<div class="col-md-7">
  <div class="row">
    <div class="col-md-10">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Select Doctor</h4></div>
        <div class="panel-body">
          <table class='table table-striped table-bordered table-condensed'>
            <thread>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Department</th>
              </tr>
              <tbody>
              <% @doctors.each_with_index do |doctor, index| %>
                  <tr>
                    <td><%= link_to("#{index}", edit_doctor_path(doctor)) %></td>
                    <td><%= doctor.full_name %></td>
                    <td><%= doctor.department.name %></td>
                  </tr>
              <% end %>
              </tbody>
            </thread>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>


<div class="col-md-2">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Options</h4></div>
        <div class="panel-body">
          <%= link_to "Add Doctor", new_doctor_path %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

