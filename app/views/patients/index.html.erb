<%= provide :title, 'Home | '  %>
<%= render 'header' %>

<h2 style="text-align: center;">
  Welcome, <%= @patient.full_name %>
</h2>

<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <%= render 'shared_show' %>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="row patient-home-submenu-links">
      <div class="col-md-6">
        <%= link_to 'edit profile', edit_patient_path(@patient) %>
      </div>
      <div class="col-md-6">
        <%= link_to 'change password', patient_password_path(@patient) %>
      </div>
    </div>
  </div>
</div>
