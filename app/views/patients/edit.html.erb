<%= provide(:title, "Edit Profile") %>
<%= render 'patients/sidebar' %>

<div class="col-xs-8">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Edit Profile</h4></div>
        <div class="panel-body">

          <%= form_for(@patient, html: { :multipart => :true, class: "form-horizontal", role: "form" }) do |f| %>
            <%= render 'patients/new_edit_form', f: f %>
            <div class='form-group'>
              <div class='col-xs-7'>
                <%= f.label(:verify, 'Password - required to make changes') %>
                <%= password_field(:verify, :verify_password, class: 'form-control') %>
              </div>
            </div>
            <%= f.submit 'Update', class: 'btn btn-success' %>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

</div>





