<div class="col-md-10 col-md-offset-1">
  <div class="card">
    <div class="card-header"><h4>Edit Profile</h4></div>
    <div class="card-block">
      <%= form_for(@patient, html: { :multipart => :true, class: "form-horizontal", role: "form" }) do |f| %>
        <%= render 'patients/new_edit_form', f: f %>
        <fieldset class='form-group row'>
          <div class='col-sm-8 col-sm-offset-2'>
          <%= f.label(:patient, 'Password - required to make changes', :style=>'display: block') %>
            <%= password_field(:patient, :password, class: 'form-control') %>
          </div>
        </fieldset>
        <div class="form-group row">
          <div class='col-sm-12' style="text-align: center; margin-top: 1em;">
            <%= f.submit 'Update', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  </div>







