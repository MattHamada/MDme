<div class="col-md-8 col-md-offset-3">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default ">
        <div class="panel-heading panel-inverse"><h4><%= @patient.full_name %></h4></div>
        <div class="panel-body panel-inverse">
          <%= image_tag @patient.avatar.url(:thumb), id: 'avatar' %>
          <br/>
          <b>First Name:</b> <%= @patient.first_name %><br/>
          <b>Last Name:</b> <%= @patient.last_name %><br/>
          <b>Email:</b> <%= @patient.email %><br/>
          <b>Home Phone #:</b> <%= @patient.home_number %><br/>
          <b>Work Phone #:</b> <%= @patient.work_phone %><br/>
          <b>Preferred Doctor:</b> <%= @patient.doctor.full_name %><br/>
          <%= link_to 'Edit', edit_admin_patient_path(current_admin, @patient) unless current_admin.nil? %>
        </div>
      </div>
    </div>
  </div>
</div>