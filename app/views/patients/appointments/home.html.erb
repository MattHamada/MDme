<%= provide(:title, "Appointments |") %>
<div class="container-fluid" style="background-color: #f5f5f5; padding-top: 2em; padding-bottom: 2em;">
  <%= render 'patients/profile_upcoming_appointment_section' %>
  <div class="row portal-groups">
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-2">
          <!--<i class="icon-schedule-text mdme-icon img-responsive fa-4x" style="width: 250px !important; height: 250px !important; "></i>-->
          <%= fa_icon "calendar 2x", class: 'mdme-icon img-responsive' %>
        </div>
        <div class="col-xs-10">
          Scheduled Appointments
        </div>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-2">
          <%= fa_icon "calendar 2x", class: 'mdme-icon img-responsive' %>
        </div>
        <div class="col-xs-10">
          Requested Appointments
        </div>
      </div>
    </div>
  </div>
  <div class="row portal-groups">
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <%= link_to new_patient_appointment_path(@patient) do %>
        <div class="row">
          <div class="col-xs-2" >
            <%= fa_icon "calendar 2x", class: 'mdme-icon img-responsive' %>
          </div>
          <div class="col-xs-10">
            Request an Appointment
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-2">
          <%= fa_icon "hospital-o 2x", class: 'mdme-icon img-responsive' %>
        </div>
        <div class="col-xs-10">
         ?
        </div>
      </div>
    </div>
  </div>
</div>