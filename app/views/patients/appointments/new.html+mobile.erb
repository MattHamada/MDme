<div class="row">
  <div class="col-md-12 main-holder">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Select Date</h4></div>
      <div class="panel-body">

        <%= form_for(:appointment, url:open_appointments_browse_path, remote: true, method: :get, html: { class: 'form-group form-inline', role: 'form' }) do |f| %>
          <div class="col-md-4">
            <%= f.label(:date, "Select Date") %>

            <%= f.text_field(:date, class: "form-control" ) %>
          </div>
          <div class='form-group'>
            <div class="col-md-7">
              <%= f.label(:appointment, 'Doctor') %>
              <%= collection_select(:appointment, :doctor_id, Doctor.in_clinic(@patient).ordered_last_name, :id, :full_name, {}, { class: 'form-control'}) %>
            </div>
          </div>
          <div class='form-group' id="submit">
            <%= f.submit 'Find open times', class: 'btn btn-large btn-primary', id: 'submit_button' %>
          </div>
        <% end %>
      </div>
      <div id="open_appointment_results">
      </div>
    </div>
  </div>
</div>
