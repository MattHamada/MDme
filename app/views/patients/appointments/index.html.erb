<%= render 'patients/sidebar' %>

<div class="col-xs-6">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Confirmed Appointments</h4></div>
        <div class="panel-body">

          <table class='table table-striped table-bordered table-hover'>
            <thread>
              <tr>
                <th>#</th>
                <th>Time</th>
                <th>Doctor</th>
              </tr>
              <tbody>
              <% @appointments.each_with_index do |appointment, index| %>
                <tr>
                  <td id="show_appointment"><%= link_to("#{index+1}", patient_appointment_path(@patient, appointment)) %></td>
                  <td><%= appointment.time_am_pm %></td>
                  <td><%= link_to "#{appointment.doctor_full_name}", patient_doctor_path(@patient, appointment.doctor) %></td>
                </tr>
              <% end %>
              </tbody>
            </thread>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-xs-3">
  <div class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Options</h4></div>
        <div class="well">
          <ul class="nav nav-pills nav-stacked">
            <li><%= link_to "New Request", new_patient_appointment_path(@patient) %></li>
            <li><%= link_to "Open Requests", open_requests_path(@patient) %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
