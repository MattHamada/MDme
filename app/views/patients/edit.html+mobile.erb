<div class="row" id="main-row">
  <div class="col-md-11 main-holder">
    <div class="panel panel-default">
      <div class="panel-heading" ><h4>Edit Profile</h4></div>
      <div class="panel-body">

        <%= form_for(@patient, html: { :multipart => :true, class: "form-horizontal", role: "form" }) do |f| %>
          <%= render 'shared/flash' %>
          <%= render 'shared/error_messages', object: @patient %>

          <div class='form-group'>
            <div class='col-md-7'>
              <%= f.label(:patient, 'First Name') %>
              <%= text_field :patient, :first_name, class: 'form-control' %>
            </div>
          </div>

          <div class='form-group'>
            <div class='col-md-7'>
              <%= f.label(:patient, 'Last Name') %>
              <%= text_field(:patient, :last_name, class: 'form-control') %>
            </div>
          </div>
          <div class='form-group'>
            <div class="col-md-7">
              <%= f.label(:patient, "Email") %>
              <%= text_field(:patient, :email, class: 'form-control') %>
            </div>
          </div>
          <div class='form-group'>
            <div class="col-md-7">
              <%= f.label(:patient, 'Phone Number') %>
              <%= text_field(:patient, :phone_number, class: 'form-control') %>
            </div>
          </div>
          <div class='form-group'>
            <div class="col-md-7">
              <%= f.label(:patient, 'Doctor') %>
              <%= collection_select(:doctor, :doctor_id, Doctor.in_clinic(@current_user).ordered_last_name, :id, :full_name, {}, { class: 'form-control'}) %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-7">
              <b>Picture:</b> <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg,image/png' %>
            </div>
          </div>

          <br/><br/>
          <div class='form-group'>
            <div class='col-md-7'>
              <%= f.label(:verify, 'Password - required to make changes') %>
              <%= password_field(:verify, :verify_password, class: 'form-control') %>
            </div>
          </div>
          <br/>
          <div class="button_links" style="text-align: center;">
            <%= f.submit 'Update Profile', class: 'btn btn-large btn-success' %>

          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
