<%= provide(:title, 'Change Password | ') %>
<%= render 'patients/header' %>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Change Password</h4></div>
      <div class="panel-body panel-inverse">
        <%= render 'shared/flash' %>
        <%= render 'shared/error_messages', object: @patient %>

        <%= form_tag(patient_update_password_path, method: :post, html: { :multipart => :true, class: "form-horizontal", role: "form" }) do %>
          <%= render 'shared/password_change_form' %>

          <div class='col-xs-6 col-xs-offset-5'>
            <%= submit_tag 'Change', class: 'btn btn-success' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>






