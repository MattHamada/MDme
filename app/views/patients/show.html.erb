<%= provide(:title, "#{full_name(@patient)} |") %>
<div class="container-fluid" style="background-color: #f5f5f5; padding-top: 2em; padding-bottom: 2em;">
  <div class="row">
    <div class="col-sm-6">
      <div class="row" style="padding-left: 4em;">
        <div class="col-xs-3">
          <%= image_tag(@patient.avatar_thumb_url, alt: 'logo', class:"img-responsive center-block", style:'max-height: 10em')  %>
        </div>
        <div class="col-xs-9 blue-text">
          <div class="row">
            <div class="col-md-12">
              <h4><%= @patient.full_name %></h4>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= @patient.sex_humanize %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              DOB: <%= @patient.birthday.strftime('%m/%d/%Y') %>
            </div>
         </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <%= render 'patients/appointments/upcoming_appointment_details' %>
    </div>
  </div>
  <div class="row portal-groups">
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-1">
          <%= fa_icon "calendar 3x", class: 'mdme-icon' %>
        </div>
        <div class="col-xs-10">
           My Appointments
        </div>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-1">
          <%= fa_icon "medkit 3x", class: 'mdme-icon' %>
        </div>
        <div class="col-xs-10">
          My Medications
        </div>
      </div>
    </div>
  </div>
  <div class="row portal-groups">
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-1">
          <%= fa_icon "user-md 3x", class: 'mdme-icon' %>
        </div>
        <div class="col-xs-10">
          My Clinicians
        </div>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-1">
          <%= fa_icon "hospital-o 3x", class: 'mdme-icon' %>
        </div>
        <div class="col-xs-10">
          My Clinics
        </div>
      </div>
    </div>
  </div>
  <div class="row portal-groups">
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-1">
          <%= fa_icon "heart 3x", class: 'mdme-icon' %>
        </div>
        <div class="col-xs-10">
          My Records
        </div>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-1">
          <%= fa_icon "qrcode 3x", class: 'mdme-icon' %>
        </div>
        <div class="col-xs-10">
          Appointment Check-in
        </div>
      </div>
    </div>
  </div>
</div>