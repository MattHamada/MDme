<%= provide(:title, "#{full_name(@patient)} |") %>
<div class="container-fluid" style="background-color: #f5f5f5; padding-top: 2em; padding-bottom: 2em;">
  <%= render 'patients/profile_upcoming_appointment_section' %>
  <div class="row portal-groups">
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline btn btn-primary-outline">
      <%= link_to home_patient_appointments_path(@patient) do %>
         <div class="row">
          <div class="col-xs-2">
            <%= fa_icon "calendar 2x", class: 'mdme-icon img-responsive' %>
          </div>
          <div class="col-xs-10">
             My Appointments
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-2">
          <%= fa_icon "medkit 2x", class: 'mdme-icon img-responsive' %>
        </div>
        <div class="col-xs-10">
          My Medications
        </div>
      </div>
    </div>
  </div>
  <div class="row portal-groups">
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-2">
          <%= fa_icon "user-md 2x", class: 'mdme-icon img-responsive' %>
        </div>
        <div class="col-xs-10">
          My Clinicians
        </div>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-2">
          <%= fa_icon "hospital-o 2x", class: 'mdme-icon img-responsive' %>
        </div>
        <div class="col-xs-10">
          My Clinics
        </div>
      </div>
    </div>
  </div>
  <div class="row portal-groups">
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-2">
          <%= fa_icon "heart 2x", class: 'mdme-icon img-responsive' %>
        </div>
        <div class="col-xs-10">
          My Records
        </div>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-1 portal-item btn btn-primary-outline">
      <div class="row">
        <div class="col-xs-2">
          <%= fa_icon "qrcode 2x", class: 'mdme-icon img-responsive' %>
        </div>
        <div class="col-xs-10">
          Appointment Check-in
        </div>
      </div>
    </div>
  </div>
</div>