<%= provide(:title, "Doctors") %>
<%= render 'patients/sidebar' %>

<div class="col-xs-7">
  <div class="row">
    <div class="col-xs-10">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Select Doctor</h4></div>
        <div class="panel-body">
          <div class="popup-links">

          <table class='table table-striped table-bordered table-condensed'>
            <thread>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Department</th>
              </tr>
              <tbody>
              <% @doctors.each_with_index  do |doctor, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td class="show_appointment"><%= link_to "#{doctor.full_name}", patient_doctor_path(@patient, doctor) %></td>
                  <td><%= doctor.department_name %></td>
                </tr>
              <% end %>
              </tbody>
            </thread>
          </table>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>


</div>