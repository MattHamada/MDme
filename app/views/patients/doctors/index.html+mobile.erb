<div class="row">
  <div class="col-md-12 main-holder">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Doctors</h4></div>
      <div class="panel-body">
         <table class='table table-striped table-bordered table-condensed'>
            <thread>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Department</th>
              </tr>
              <tbody>
              <% @doctors.each_with_index  do |doctor, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= link_to "#{doctor.full_name}", patient_doctor_path(@patient, doctor) %></td>
                  <td><%= doctor.department_name %></td>
                </tr>
              <% end %>
              </tbody>
            </thread>
          </table>
      </div>
    </div>
  </div>
</div>