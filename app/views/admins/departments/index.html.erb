<%= provide(:title, "Departments | ") %>
<%= render 'admins/header' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Departments</h4></div>
      <div class="panel-body panel-inverse">
        <table class='table table-striped table-bordered table-condensed table-inverse'>
          <thread>
            <tr>
              <th>#</th>
              <th>Department</th>
              <th>Doctors</th>
            </tr>
            <tbody><% @departments.each_with_index  do |department, index| %>
              <tr>
                <td><%= "#{index+1}" %></td>
                <td><%=  link_to("#{department.name}", admin_department_path(@admin, department)) %></td>
                <td><%= "#{department.num_doctors}" %></td>
              </tr>
            <% end %>
            </tbody>
          </thread>
        </table>

      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="row">
      <div class="col-xs-12 inverse-color" >
            <%= link_to "Add Department", new_admin_department_path(@admin) %>
      </div>
    </div>
  </div>
</div>

