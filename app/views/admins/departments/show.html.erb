<%= provide(:title, "#{@department.name}") %>
<%= render 'admins/header' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading"><h4><%= "#{@department.name}" %></h4></div>
      <div class="panel-body panel-inverse">
        <table class='table table-striped table-bordered table-condensed table-inverse'>
          <thread>
            <tr>
              <th>#</th>
              <th>Doctor</th>
            </tr>
            <tbody><% @doctors.each_with_index  do |doctor, index| %>
              <tr>
                <td><%= "#{index+1}" %></td>
                <td><%=  link_to("#{doctor.full_name}", doctor_path(doctor)) %></td>
              </tr>
            <% end %>
            </tbody>
          </thread>
        </table>

        <%= link_to 'Delete department', admin_department_path(@admin, @department), method: :delete %>

      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="row">
      <div class="col-xs-12 inverse-color">
            <%= link_to "Add Doctor", new_admin_doctor_path(department_id: @department.id) %>
      </div>
    </div>
  </div>
</div>

