<%= provide(:title, 'Update Patient') %>
<%= render 'admins/sidebar' %>

<div class="col-md-8">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Update Patient</h4></div>
        <div class="panel-body">
          <%= form_for @patient, method: :put do |f| %>
              <%= render 'patients/new_edit_form', f: f %>

              <%= f.submit 'Update', class: 'btn btn-success' %>
          <% end %>
          <br/>
          <%= link_to 'Delete Patient', patient_path(@patient), method: :delete %>

        </div>
      </div>
    </div>
  </div>
</div>

</div>