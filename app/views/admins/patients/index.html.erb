<%= provide(:title, 'Patients') %>
<%= render 'admins/header' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Select Patient</h4></div>
      <div class="panel-body panel-inverse">
        <table class='table table-striped table-bordered table-condensed table-inverse'>
          <thread>
            <tr>
              <th>#</th>
              <th>Name</th>
            </tr>
            <tbody>
            <% @patients.each_with_index do |patient, index| %>
                <tr>
                  <td class="popup-links"><%= link_to("#{index}", admin_patient_path(@admin, patient)) %></td>
                  <td><%= patient.full_name %></td>
                </tr>
            <% end %>
            </tbody>
          </thread>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="row">
      <div class="col-xs-12 inverse-color">
            <%= link_to "Add Patient", new_admin_patient_path(@admin) %>
      </div>
    </div>
  </div>
</div>

