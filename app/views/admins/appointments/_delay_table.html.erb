<ul class="nav nav-tabs" data-turbolinks="false">
  <% @doctors.each_with_index do |doctor, index| %>
    <li data-id="<%= doctor.id %>" class="nav-item doc-tab">
      <a id="<%= doctor.id %>" class=" doc-tab-link nav-link <%= 'active' if (params[:doctor_id].nil? && index == 0) || params[:doctor_id] == doctor.id.to_s %>" href="#">
        <%= doctor.full_name %>
      </a>
    </li>
  <% end %>
</ul>

<table class='table table-striped table-bordered table-hover'>
  <thread>
    <tr>
      <th>Original time</th>
      <th>Delayed time</th>
      <th>Patient</th>
      <th>Delay by</th>
      <th><confirm></confirm></th>
    </tr>
    <tbody>
    <% @appointments.each_with_index  do |appointment, index| %>
      <%= form_tag(add_delay_admin_appointment_path(@admin, appointment), html: { role: 'form' }) do %>
        <tr id="<%= appointment.id %>" class="appointment-row">
        <td class="linked-no-url" data-toggle="modal" data-target="#approval-popup"><%= appointment.date_time_ampm %><%# "#{appointment.date} (#{link_to 'See schedule', '#', :class=>'show-on-date', "data-toggle"=>"modal", 'data-target'=>"#approval-popup", 'data-doctorid'=>appointment.doctor_id, 'data-id'=>appointment.id })".html_safe %></td>
        <td class="linked-no-url" data-toggle="modal" data-target="#approval-popup"><%= appointment.delayed_date_time_ampm %></td>
        <td class="linked-no-url" data-toggle="modal" data-target="#approval-popup"><%= appointment.patient_full_name %></td>
          <%= hidden_field_tag(:doctor_id, appointment.doctor.id) %>
          <%= hidden_field_tag(:appointment_id, appointment.id) %>
          <td>
            <div class='form-group'>
              <%= select_tag(:delay_time,
                             options_for_select([5, 10, 15, 20 ,30, 45, 60].map{|o| [o,o]}), class: 'form-control') %>
            </div>
          </td>
          <td>
            <div class="checkbox-inline">
              <label>
                <%= check_box_tag(:apply_to_all, 'apply_to_all', false, class: 'form-control') %>Apply to all remaining
              </label>
            </div>
            <%= submit_tag 'Update', class: 'btn btn-sm btn-primary'%></td>
      </tr>
    <% end %>
    <% end %>
    </tbody>
  </thread>
</table>

<div class="modal" id="approval-popup" tabindex="-1" role="dialog"
     aria-labelledby="approval-popup" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="popup-title"></h4>
      </div>
      <div class="modal-body" id="popup-content">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('.appointment-row').on('click', function() {
      appointment_id = $(this).attr('id');
      $.ajax({
        method: 'get',
        url: '/admins/<%=@admin.id%>/appointments/' + appointment_id,
        success: function(data) {
          $('#popup-content').html(data);
          $('#popup-title').html('');
        }
      });
    });
    $('li.doc-tab').on('click', function() {
      doctor_id = $(this).data('id');
      var date  = $('input#date').val();
      $.ajax({
        method: 'get',
        url: '<%= request.path %>',
        data: { doctor_id: doctor_id, date: date },
        success: function(data) {
          $('#appointments-list').html(data);
        },
        complete: function() {
          $('a.doc-tab-link').attr('class', 'nav-link doc-tab-link');
          $('a#' + doctor_id).attr('class', 'nav-link doc-tab-link active');
          $('#flash').html('');
        }
      });
    });
  })
</script>
