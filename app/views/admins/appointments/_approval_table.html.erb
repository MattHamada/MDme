<ul class="nav nav-tabs" data-turbolinks="false">
  <% @doctors.each_with_index do |doctor, index| %>
    <li data-id="<%= doctor.id %>" class="nav-item doc-tab">
      <a id="<%= doctor.id %>" class=" doc-tab-link nav-link <%= 'active' if (params[:doctor_id].nil? && index == 0) || params[:doctor_id] == doctor.id.to_s %>" href="#">
        <%= doctor.full_name %>
      </a>
    </li>
  <% end %>
</ul>

<table class='table table-striped table-bordered table-hover'>
  <thread>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Patient</th>
        <th>Options</th>
    </tr>
    <tbody>
    <% @appointments.each_with_index do |appointment, index| %>
      <tr id="<%= appointment.id %>" class="linked-no-url appointment-row" data-toggle="modal" data-target="#approval-popup">
        <td><%= appointment.date %><%# "#{appointment.date} (#{link_to 'See schedule', '#', :class=>'show-on-date', "data-toggle"=>"modal", 'data-target'=>"#approval-popup", 'data-doctorid'=>appointment.doctor_id, 'data-id'=>appointment.id })".html_safe %></td>
        <td><%= appointment.time_am_pm %></td>
        <td><%= appointment.patient_full_name %></td>
        <td style="text-align: center;">
          <%= link_to 'Approve', approve_deny_admin_appointment_path(@admin, appointment, confirmed: true),method: :post, class: 'btn btn-mini btn-success approve' %>
          <%= link_to 'Deny', approve_deny_admin_appointment_path(@admin, appointment, confirmed: false), method: :post, class: 'btn btn-mini btn-danger deny' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </thread>
</table>

<div class="modal" id="approval-popup" tabindex="-1" role="dialog"
     aria-labelledby="approval-popup" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="popup-title"></h4>
      </div>
      <div class="modal-body" id="popup-content">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('.appointment-row').on('click', function() {
      appointment_id = $(this).attr('id');
      $.ajax({
        method: 'get',
        url: '/admins/<%=@admin.id%>/appointments/' + appointment_id,
        success: function(data) {
          $('#popup-content').html(data);
          $('#popup-title').html('');
        }
      })
    });
    $('.show-on-date').on('click', function() {
      appointment_id = $(this).data('id');
      doctor_id = $(this).data('doctorid');
      $.ajax({
        method: 'get',
        url: '<%= show_on_date_admin_appointments_path(@admin) %>',
        data: {appointment_id: appointment_id, doctor_id: doctor_id},
        success: function(data) {
          $('#popup-content').html(data);
          $('#popup-title').html($('#use-for-title').html());
        }
      });
      return false;
    });
    $('li.doc-tab').on('click', function() {
      doctor_id = $(this).data('id');
      var date  = $('input#date').val();
      $.ajax({
        method: 'get',
        url: '<%= request.path %>',
        data: { doctor_id: doctor_id, date: date },
        success: function(data) {
          $('#appointments-list').html(data);
        },
        complete: function() {
          $('a.doc-tab-link').attr('class', 'nav-link doc-tab-link');
          $('a#' + doctor_id).attr('class', 'nav-link doc-tab-link active');
          $('#flash').html('');
        }
      });
    });
  })
</script>
