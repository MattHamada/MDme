<%= provide(:title, 'Patients') %>
<%= render 'admins/sidebar' %>

<div class="col-md-7">
  <div class="row">
    <div class="col-md-10">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Select Patient</h4></div>
        <div class="panel-body">
          <table class='table table-striped table-bordered table-condensed'>
            <thread>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Doctor</th>
              </tr>
              <tbody>
              <% @patients.each_with_index do |patient, index| %>
                  <tr>
                    <td><%= link_to("#{index}", edit_patient_path(patient)) %></td>
                    <td><%= patient.full_name %></td>
                    <td><%= patient.doctor.full_name %></td>
                  </tr>
              <% end %>
              </tbody>
            </thread>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>


<div class="col-md-2">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Options</h4></div>
        <div class="panel-body">
          <%= link_to "Add Patient", new_patient_path %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

