<%= provide(:title, "Doctors") %>
<%= render 'admins/header' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Select Doctor</h4></div>
      <div class="panel-body panel-inverse">
        <table class='table table-striped table-bordered table-condensed table-inverse'>
          <thread>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Department</th>
            </tr>
            <tbody>
            <% @doctors.each_with_index  do |doctor, index| %>
                <tr>
                  <td class="popup-links"><%= link_to("#{index}", admin_doctor_path(@admin, doctor)) %></td>
                  <td><%= doctor.full_name %></td>
                  <td><%= doctor.department_name %></td>
                </tr>
            <% end %>
            </tbody>
          </thread>
        </table>

      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="row">
      <div class="col-xs-12 inverse-color">
            <%= link_to "Add Doctor", new_admin_doctor_path(@admin) %>
      </div>
    </div>
  </div>
</div>