//mixins
@mixin vertical-align($position: relative) {
  position: $position;
  top: 50%;
}

//adds spacing between collapsed columns in bootstrap
[class*="col-"]:not(:last-child){
  margin-bottom: 1em;
}

html,body {
  margin:0;
  padding:0;
  height:100%;
}

body {
