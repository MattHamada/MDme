//signin page
#signin-logo {
  height: 180px;
  display:block;
  margin:auto;

}

.patient-signin-input {
  padding: 10px;
  border: none;
  transition: border 0.3s;
  outline: none;
  -webkit-box-shadow: none !important;
  -moz-box-shadow: none !important;
  box-shadow: none !important;
  color: $mdmeBlue;
}
#patient-signin-email:focus, #patient-signin-email.focus {
  border-bottom: solid 3px $mdmeBlue;
}

#patient-signin-email {
  border-bottom: solid 3px $mdmeBlue;
  margin-bottom: 0;
  padding-bottom: 0;
}

.blue-input-placeholder {
  font-size: 16px;
  input::-webkit-input-placeholder {
    color: $mdmeBlue;
  }
  input:-moz-placeholder {
    /* FF 4-18 */
    color: $mdmeBlue;
  }
  input::-moz-placeholder {
    /* FF 19+ */
    color: $mdmeBlue;
  }
  input:-ms-input-placeholder {
    /* IE 10+ */
    color: $mdmeBlue;
  }
}

#patient-signin-password {
  margin-top: 0;
  padding-top: 0;
}

.signin-button {
  color: white;
  width: 10em;
}

.signin-button:hover {
  color: white;
}

