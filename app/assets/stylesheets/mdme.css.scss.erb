//patient clinic page
#clinic-info {
  span {
    display: inline-block;
    min-width: 10em;
  }

  #clinic-times span {
    display: inline-block;
    min-width: 9em;
  }
  label {
    border-bottom: solid 1px lightgray;
    width: 100%;
  }
}

//patient show page
#patient-show-info {
  label {
    border-bottom: 1px solid #DDD;
    clear: left;
    float: none;
    width: 100%;
    display: block;
    padding: 5px 0;
    line-height: 20px;
    b {
      display: block;
      width: 10em;
      float: left;
      position: relative;
    }
  }
  div {
    margin-left: 10em;
  }
}



