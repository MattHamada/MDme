//Patient pages
.progress {
  margin-bottom: 0;
}

#upcoming-appointment-details {
  @include vertical-align;
  padding-left: 4em;
  font-size: 10pt;
  b {
    display: block;
    float: left;
    position: relative;
    width: 6em;
  }
}

.portal-groups {
}

.portal-item {
  border: 5px solid #f5f5f5;
  height: 5em;
  line-height: 5em;
  background-color: white;
  text-align: center;
  display: block;
  padding-top: 0;
}

.portal-button {
  border: 5px solid #f5f5f5;
  background-color: white;
