//colors
$mdmeBlue: #3fc3d5;
$mdmeLightBlue: #41edff;
$mdmeDarkBlue: #0097A7;
//mixins
@mixin vertical-align($position: relative) {
  position: $position;
  top: 50%;
}

//adds spacing between collapsed columns in bootstrap
[class*="col-"]:not(:last-child){
  margin-bottom: 1em;
}

html,body {
  margin:0;
  padding:0;
  height:100%;
}

body {
  font-family: 'Open Sans', Verdana, sans-serif;
}

.form-control-fixed-size {
  min-width: 20em;
  width: auto;
  display: inline;
}

.card-header, .card-footer {
  text-align: center;
}

//global links
a {
  color: $mdmeBlue;
  text-decoration: none
}

a:link {
  color: $mdmeBlue;
  text-decoration: none;
}

a:visited {
  color: $mdmeBlue;
  text-decoration: none;
}

a:hover {
  color: $mdmeBlue;
  /*font-weight: bold;*/
}

a:active {
  color: $mdmeBlue;
  text-decoration: none;
}

.blue-text {
  color: $mdmeBlue;
}

#breadcrumbs {
  font-size: 10pt;
  a {
    color: black;
    text-decoration: none
  }

  a:link {
    color: black;
    text-decoration: none;
  }

  a:visited {
    color: black;
    text-decoration: none;
  }

  a:hover {
    color: black;
    /*font-weight: bold;*/
  }

  a:active {
    color: black;
    text-decoration: none;
  }
