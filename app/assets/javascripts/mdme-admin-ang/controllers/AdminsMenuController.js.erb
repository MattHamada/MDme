angular.module('mdme-admin').controller('AdminsMenuController', ['$scope', '$location', 'AdminAuth', 'AdminLocalService', '$state', function($scope, $location, AdminAuth, AdminLocalService, $state) {
  $scope.admin = {id: AdminLocalService.get('adminId') };
  //TODO set this up for styling current link
  $scope.currentNav = function(page) {
    var current = $location.path();
    return page === current ? 'top-links-active' : '';
  };
  $scope.logoSrc = '<%= asset_path("full_logo_white.png") %>';

  $scope.logout = function() {
    AdminAuth.logout();
    $state.go('anon.signin');
  };

}]);