APTS = {}

APTS.setup = function() {
    //add div to end of page
    $('<div id="ajaxAptInfo"></div>').
        hide().
        appendTo($('body'));
    $('#day_appointments').on('click', 'a', APTS.getInfo);
};

APTS.getInfo = function() {
    $.ajax({type: 'GET',
        url: $(this).attr('href'),
        timeout: 5000,
        success: APTS.showInfo,
        error: function() {alert("Error loading appointment");}
    });
    return(false);
};

//data is ajax return obj
APTS.showInfo = function(data) {
    //center is 1/2 wide 1/4 tall as screen
    var oneFourth = Math.ceil($(window).width() / 4);
    $('#ajaxAptInfo').
        html(data).
        css({'left': oneFourth, 'width': 2*oneFourth, 'top': 250}).
        show();
    //make close link work
    $('closeLink').click(RP.hideInfo);
    return false;
}

APTS.hideInfo = function() {
    $('#ajaxAptInfo').hide();
    return false;
}

$(APTS.setup);