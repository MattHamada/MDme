angular.module('mdme').controller('StaticMenuController', ['$scope', '$location', 'Auth', function($scope, $location, Auth) {
  $scope.currentNav = function(page) {
    var current = $location.path();
    return page === current ? 'top-links-active' : '';
  };
  $scope.logoSrc = '<%= asset_path("full_logo_white.png") %>';
  $scope.loggedIn = function() {
    if ((Auth.isAuthenticated())) {
      return true;
    }
    else {
      return false;
    }
  }
}]);